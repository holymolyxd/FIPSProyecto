body
    align-items center
    background-color #f6f6f6
    display flex
    justify-content center
    margin 0px
    font-size 14px
    min-height: 100vh

.mtop16
    margin-top 16px

.box
    background-color #fff
    border-radius 8px
    border 1px solid #d6d6d6
    position relative
    width 500px
    .btn-success
        width 100%
        border 0
    .form-control
        &:focus
        &:active
            outline none
            box-shadow none
    .inside
        padding 16px
    .header
        background-color rgb(208, 0, 0)
        border-radius 8px 8px 0px 0px
        padding 16px
        a
            img
                display block
                width 36%
                margin 0 auto
    .footer
        text-align center
        p
            font-size .8em
            display inline-block
        a
            display inline-block
            font-size .8em
            margin-left 1px
            color rgb(208, 0, 0) !important
            &:hover
                text-decoration none
            &:last-child
                margin-left 24px

@media only screen and (max-width: 728px)
    .box
        width 88%

body
    background-color #f5f6fa
    font-size 14px
    font-family 'Roboto', sans-serif

h1,h3,h4,h5,ul,body,html
    padding 0px
    margin 0px

.mtop16
    margin-top: 16px

.wrapper
    overflow-x: hidden
    .col1
        float left
        position relative
        z-index 999
    .col2
        float right
        width 100%

.sidebar
    min-height: 100vh
    margin-left: -17rem
    -webkit-transition: margin .25s ease-out
    -moz-transition: margin .25s ease-out
    -o-transition: margin .25s ease-out
    transition: margin .25s ease-out
    background-color #ffffff
    .section-top
        background-color rgb(208, 0, 0)
        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
    .logo
        display block
        margin 0px auto
        padding-top 24px
        width 60%
    .user
        color #fff !important
        padding 16px
        a
            color #fff
            font-size 1.2em
    .main
        display block
        margin-top: 8px
        ul
            li
                margin-bottom 4px
                a
                    color #8998AC !important
                    display block
                    font-size 1.1em
                    padding 12px 16px
                    text-decoration none !important
                    i
                        margin-right 10px
                    &:hover
                        background-color rgb(208, 0, 0)
                        box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
                        color #ffffff !important
                        text-decoration none !important
                a.active
                    background-color rgb(208, 0, 0)
                    box-shadow 0 0.5rem 1rem rgba(0,0,0, 0.15)
                    color #ffffff !important
                    text-decoration none !important
            a
                display block
                margin-top: 8px
                color #8998AC !important
                padding 12px 16px
                text-decoration none !important

.navbar
    background-color rgb(208, 0, 0) !important
    a
        color #ffffff !important

.page
    padding-top: 16px
    padding-bottom: 16px
    .breadcrumb
        background-color #ffffff
        box-shadow 0 0.5rem 1rem rgba(0, 0, 0, 0.10) !important
        .breadcrumb-item
            a
                &:hover
                    text-decoration none !important
    .panel
        background-color #ffffff
        border-radius 6px
        border-bottom: 2px solid rgb(208, 0, 0)
        .header
            border-bottom: 1px solid #e8e8e8
            h2.title
                display inline-block
                color #19213d
                font-size 1.1em
                padding 12px 16px
            ul
                display inline-block
                float right
                margin-right 12px
                li
                    display inline-block
                    position relative
                    a
                        color #333
                        display inline-block
                        padding 10px
                        font-size 1em
                        &:hover
                            background-color #f6f6f6
                            color #222
                            text-decoration none
                        i
                            color rgb(208, 0, 0)
                    ul
                        background-color #FFFFFF
                        border 1px solid #f0f0f0
                        display none
                        float none
                        position absolute
                        right -16px
                        width 200px
                        li
                            display inline-block
                            border-bottom 1px solid #f0f0f0
                            width 100%
                            &:last-child
                                border-bottom 0px
                            a
                                display block
                                width 100%
                    &:hover
                        ul
                            display block
        .inside
            padding 16px
            .form_search
                display none
                margin-bottom 16px
                .btn
                    width 100%
            .big_count
                display block
                font-size 2em
                width 100%
                text-align: center

.opts
    a
        border-radius 4px
        border 1px solid #f0f0f0
        display inline-block
        padding 8px

.page_user
    .mini_profile
        .avatar
            display block
            margin 0px auto
            border-radius 50%
            width 200px
        .info
            background-color #ffffff
            span
                display block
                font-size 1.2em
                width 100%
            span.title
                font-weight bold
                margin-top: 16px
        .btn
            width 100%
            margin-top: 16px
textarea
    resize: none

@media (min-width: 768px) {
    .sidebar {
        margin-left: 0;
    }

    .page {
        min-width: 0;
        width: 100% !important;
    }

    #wrapper.toggled .sidebar {
        margin-left: -17rem;
    }
}
